@model PODBookingSystem.ViewModels.LoginViewModel

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>Đăng nhập - POD Booking System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/login_register_edit_create.css">
</head>
<body>
    <header>
        <!-- Nội dung header -->
    </header>

    <main class="bg1">
        <div class="main-container">
            <div class="box">
                <h1 class="formName">Đăng nhập</h1>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <label>Email</label>
                    <input id="email" name="Email" type="email" required value="@Model.Email" />

                    <label>Mật khẩu</label>
                    <input id="password" name="Password" type="password" required />

                    <button class="submitBtn" type="submit">Đăng nhập</button>
                </form>
                <p class="login-register">
                    Bạn chưa có tài khoản? <a href="/Account/Register">Đăng ký tại đây</a>
                </p>
            </div>
        </div>
    </main>

    <footer>
        <!-- Nội dung footer -->
    </footer>
</body>
</html>
